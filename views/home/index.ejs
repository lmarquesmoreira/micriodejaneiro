                    <hr class="small">
                </div>
                <div id="fb-root"></div>
                <% noticias.forEach(function(n){ %>
                    <div class="col-md-6">
                        <div class="fb-post" data-href="<%- n.url %>"></div>
                    </div>
                <% }) %> 
            </div>
            <!-- /.row -->
